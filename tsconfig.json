{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module":"es2015",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "jsx": "react",
    },
    "include": [
        "src",
        "src/node_modules/**/*"
    ],
    "exclude": ["**/*.spec.ts"]
}